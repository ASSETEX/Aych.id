    char[] passwordTrailing = new char[] { '!', '@', '#', '$', '%', '^', '&', '*', '(', ')', '-', '+', '=', '`', '~' };


    var word = passwordLeading[rand.Next(passwordLeading.Length)];
    var startInt = rand.Next(6) + 1;
    var trailing = passwordTrailing[rand.Next(passwordTrailing.Length)];

    var fakeNewPassword = word;

    if (rand.Next(2) == 0)
    {
        fakeNewPassword += startInt;
        fakeNewPassword += (startInt + 1);
        fakeNewPassword += (startInt + 2);
    }
    else
    {
        fakeNewPassword += trailing;
    }
}

