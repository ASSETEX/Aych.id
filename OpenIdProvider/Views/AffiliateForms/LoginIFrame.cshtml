@using OpenIdProvider

@{
    ViewData["Title"] = "Login";
}

@ViewData.HandleErrorMessage()

<div class="explanation">
    <p>
        Login using your OpenId account.
    </p>
</div>

<div class="login-form">
    <form method="post" action="/affiliate/form/login/submit?affId=@ViewData["affId"]">
        <table class="position-table">
            <tr>
                <td>
                    <label for="email">Email</label>
                </td>
                <td>
                    <input class="framed-text-field" type="text" name="email" id="email" value="@ViewData["email"]" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="password">Password</label>
                </td>
                <td>
                    <input class="framed-text-field" type="password" name="password" id="password" />
                </td>
            </tr>
        </table>
        <div class="affiliate-button-container">
            <input type="submit" class="affiliate-button" value="Login" />
        </div>
        <input type="hidden" name="fkey" value="@Current.XSRFToken.Value" />
    </form>
</div>

